{
  "name": "OpenStack K8s Tools",
  "image": "my/openstack-k8s-tools:latest",
  "remoteEnv": {
    "OP_SERVICE_ACCOUNT_TOKEN": "${localEnvFile:.env:OP_SERVICE_ACCOUNT_TOKEN}"
  },

  // Run bash by default (your entrypoint.sh still runs first)
  "overrideCommand": false,

  // Optional: run an init command right after the container is ready
  "postStartCommand": "echo '[devcontainer] Ready to run!'"
}